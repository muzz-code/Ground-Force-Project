<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.extras.HelpFragment">


    <!--    Include to tool bar -->
    <include
        android:id="@+id/fragment_help_ict"
        layout="@layout/toolbar_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:id="@+id/fragment_help_email_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="19dp"
            android:background="@drawable/mission_separator_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_help_email_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:src="@drawable/ic_baseline_email"/>

            <TextView
                android:id="@+id/fragment_help_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"

                android:paddingTop="2dp"
                style="@style/colorPrimaryBlackSmallText"
                android:text="Email Us"/>

            <ImageView
                android:id="@+id/fragment_help_email_chevron_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_help_call_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="19dp"
            android:orientation="horizontal"
            android:background="@drawable/mission_separator_bg">

            <ImageView
                android:id="@+id/fragment_help_call_iv"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_weight=".1"
                android:src="@drawable/ic_customer_support"/>

            <TextView
                android:id="@+id/fragment_help_call_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:paddingLeft="24dp"
                android:paddingTop="1.5dp"
                style="@style/colorPrimaryBlackSmallText"
                android:text="Call Us"/>

            <ImageView
                android:id="@+id/fragment_help_call_chevron_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_help_faq_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="19dp"
            android:orientation="horizontal"
            android:background="@drawable/mission_separator_bg">

            <ImageView
                android:id="@+id/fragment_help_faq_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:src="@drawable/ic_info"/>

            <TextView
                android:id="@+id/fragment_help_faq_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"
                android:paddingLeft="24dp"

                style="@style/colorPrimaryBlackSmallText"
                android:text="FAQ"/>

            <ImageView
                android:id="@+id/fragment_help_faq_chevron_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:src="@drawable/ic_chevron_right"/>

        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>