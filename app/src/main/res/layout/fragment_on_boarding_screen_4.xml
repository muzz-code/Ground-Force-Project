<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OnBoardingScreen4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnBoardingScreen4Fragment">

    <ImageView
        android:id="@+id/onBoardingScreen4_Fragment_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/screen_4_iv_content_desc_str"
        android:scaleType="centerCrop"
        android:src="@drawable/lagos_girl"
        app:layout_constraintBottom_toTopOf="@+id/onBoardingScreen4_Fragment_headerText_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onBoardingScreen4_Fragment_headerText_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/screen_4_title_str"
        style="@style/PrimaryDarkExtraLargeText"
        app:layout_constraintBottom_toTopOf="@+id/onBoardingScreen4_subTitleText_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/onBoardingScreen4_subTitleText_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/screen_4_subtitle_str"
        style="@style/colorPrimaryBlackSmallText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/onBoardingScreen4_Fragment_headerText_tv"
        app:layout_constraintStart_toStartOf="@+id/onBoardingScreen4_Fragment_headerText_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>