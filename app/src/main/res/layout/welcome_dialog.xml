<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cl_success"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:width="84dp"
        android:height="35dp"
        android:layout_marginBottom="4.72dp"
        android:fontFamily="@font/titillium_web_bold"
        android:gravity="center"
        android:text="Welcome!"
        android:textColor="#00A769"
        android:textAlignment="center"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/welcome_dialog_body_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_dialog_body_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:width="0dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/welcome_account_successfully_created_str"
        style="@style/colorPrimaryBlackMediumText"
        app:layout_constraintBottom_toBottomOf="@+id/welcome_dialog_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/welcome_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDividerDialogVerification"
        app:layout_constraintBottom_toTopOf="@id/welcome_dialog_ok_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome_dialog_ok_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_bold"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="@string/location_verified_dialog_ok_str"
        android:textColor="@color/colorDialogText"
        android:textSize="@dimen/bigtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

