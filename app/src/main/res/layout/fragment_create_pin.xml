<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_reset_password_meun_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titillium_web_bold"
            android:gravity="center"
            android:text="Create Pin"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/header_text" />

        <TextView
            android:id="@+id/fragment_reset_password_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/titillium_web_bold"
            android:text="@string/you_are_almost_done_str"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <com.mukesh.OtpView
            android:id="@+id/fragment_reset_password_pin_view"
            style="@style/OtpWidget.OtpView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:singleLine="false"
            android:textColor="@color/colorTextSecondary"
            android:textColorHint="#FFFFFF"
            app:itemSpacing="25dp"
            app:itemWidth="45dp"
            app:lineColor="#FFFFFF"
            app:lineWidth="2dp"
            app:viewType="line" />

        <TextView
            android:id="@+id/fragment_missions_surveys_notif_icon_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/create_pin_sentence_str"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/small_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:gravity="bottom"
            android:orientation="vertical">


            <!--            Otp View-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/forgot_password_push_button_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_1"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/forgot_password_push_button_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_2"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_1"
                    app:layout_constraintEnd_toStartOf="@+id/forgot_password_push_button_3"
                    app:layout_constraintStart_toEndOf="@+id/forgot_password_push_button_1"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_1"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/forgot_password_push_button_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_3"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/forgot_password_push_button_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_4"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/forgot_password_push_button_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_5"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_4"
                    app:layout_constraintEnd_toStartOf="@+id/forgot_password_push_button_6"
                    app:layout_constraintStart_toEndOf="@+id/forgot_password_push_button_4"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_4" />

                <Button
                    android:id="@+id/forgot_password_push_button_6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_6"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/forgot_password_push_button_7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_7"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/forgot_password_push_button_8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_8"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_7"
                    app:layout_constraintEnd_toStartOf="@+id/forgot_password_push_button_9"
                    app:layout_constraintStart_toEndOf="@+id/forgot_password_push_button_7"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_7" />

                <Button
                    android:id="@+id/forgot_password_push_button_9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_9"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="@+id/forgot_password_push_button_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/forgot_password_push_button_8" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/forgot_password_push_button_0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circular_button"
                    android:elevation="10dp"
                    android:text="@string/_0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/forgot_password_forgot_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="@string/forgot"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.51" />

                <ImageView
                    android:id="@+id/forgot_password__delete_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/ic_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#FFFFFF" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/fragment_password_reset_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/large_text"
                app:cornerRadius="50dp"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>