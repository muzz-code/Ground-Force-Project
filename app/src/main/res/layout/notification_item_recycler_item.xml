<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notificationsBackground"
    android:id="@+id/notification_item_recycler_item_root_layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notifications_item_recycler_item_image_img"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:padding="10dp"
            app:srcCompat="@drawable/addpictureicon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/notifications_item_recycler_item_message_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:text="sdjkfhskhfsdfjsdfbsdhfbsdjvbsdjkvbdshvbsdhvbsdgvhbdsvhjbsdvhjbsjdvgjhsdbvshdjvbsdiujvkbsdhjvbsd"
        android:textColor="@color/colorTextBlackSlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notifications_item_recycler_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/colorTextBlackSlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/notifications_item_recycler_item_message_tv"
        app:layout_constraintTop_toBottomOf="@+id/notifications_item_recycler_item_message_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>