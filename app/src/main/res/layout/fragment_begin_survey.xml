<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/begin_survey_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/begin_survey_background"
    tools:context=".ui.dashboard.survey.BeginSurveyFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/begin_survey_fragment_instructions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/titillium_web_bold"
            android:text="@string/begin_survey_instructions_str"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/super_large_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/begin_survey_fragment_confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto"
            android:text="@string/begin_survey_confirm_age_str"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/begin_survey_fragment_professional_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto"
            android:text="@string/begin_survey_confirm_age_str"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/begin_survey_fragment_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto"
            android:text="@string/begin_survey_confirm_age_str"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="@dimen/medium_text" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/begin_survey_fragment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btn_primary_shapes"
                android:fontFamily="@font/roboto"
                android:text="@string/begin_survey_button_text_str"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/begin_survey_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/begin_survey_fragment_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/begin_survey_fragment_btn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>